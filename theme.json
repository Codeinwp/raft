{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "raft-bg",
					"color": "#EBE8E6",
					"name": "Background"
				},
				{
					"slug": "raft-fg",
					"color": "#1D1F25",
					"name": "Text"
				},
				{
					"slug": "raft-accent",
					"color": "#C26148",
					"name": "Accent"
				},
				{
					"slug": "raft-accent-secondary",
					"color": "#AC5039",
					"name": "Accent Secondary"
				},
				{
